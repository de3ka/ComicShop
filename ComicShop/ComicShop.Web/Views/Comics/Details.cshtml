
@model ComicShop.Data.Models.Comic

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron" style="background: repeating-linear-gradient(to right, #1d1d1d 0%, #313131 21%, #323232 50%, #313131 79%, #1d1d1d 100%); padding: 15px 15px 15px 15px; border-radius:15px 15px 15px 15px">
</div>
<div class="post-wrappper">
    <div class="row">
        <div class="col-lg-12 col-xl-8 col-md-12 col-sm-12 col-xs-12">
            <div class="small-device-wrap">
                <div>
                    <div class="box-top-border"></div>
                    <div class="row current-box">
                        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 zero-padding">
                            <div class="padding-normalize col-xs-12 col-sm-4 col-md-12 col-lg-12 col-xl-12">
                                <div class="current-box-image i-push-left">
                                    <img src="@Model.ImageUrl" alt="">
                                    <div class="box-category">"@Model.Category"</div>
                                </div>
                            </div>
                            <div class="current-box-related d-none d-lg-block d-xl-block">
                                <div class="col-xl-11 col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                    <h2>Available Count</h2>
                                    <ul>
                                        <li><img src="../../Images/pagination-right-gray.png" height="20" width="20" alt="" class="li-link"><span>      @Model.AvailableCount</span></li>
                                    </ul>
                                </div>

                            </div>
                            <div class="current-box-share col-sm-4 col-md-12 col-lg-12 col-xl-12 d-none d-sm-block d-md-block d-lg-block d-xl-block">
                                <div class="col-xl-11 col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                    <h2>Price</h2>
                                    <ul>
                                        <li><img src="../../Images/pagination-right-gray.png" height="10" width="10" alt="" class="li-link"><span>      @Model.Price.ToString("C")</span></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="clear-float"></div>
                        </div>
                        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 content-box">
                            <div class="content-wrap">
                                <h2 class="blog-title">@Model.Name"</h2>
                                <p class="article-content">"@Model.Description"</p>
                                <p style="text-align:center">
                                    <a class="add-to-cart site-button" href="/ShoppingCart/AddToCart/?Id=@Model.Id">Add to Cart</a>
                                </p>
                            </div>
                        </div>
                        <div class="box-bottom-border"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


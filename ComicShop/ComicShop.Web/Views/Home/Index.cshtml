
@model PagedList.IPagedList<ComicShop.Web.Models.ComicViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="text-align:center; background-color: transparent;">
</div>
<div class="container-fluid">
    <div id="content">
        @if (Model.Count() > 0)
        {
            <div class="row boxes-container posts-container">
                @foreach (var item in Model)
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-xs-12 box-wrapper" id="box-wrapper">
                        <div class="box col-lg-12 col-xl-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="box-image" style="background-image: url(@item.ImageUrl)"></div>
                            <p class="box-category">@item.Category</p>
                            <h2 class="box-title"><a href="/Comics/Details/@item.Id">@item.Name</a></h2>
                            <p class="box-content">@item.Description</p>
                        </div>
                    </div>
                }
            </div>
            <div class="page-count" style="display:inline-block; vertical-align:middle;">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            </div>
        }
    </div>
</div>
<div class="container-fluid">
    <div class="pagination" style="display:inline-block; vertical-align:middle;margin-left:40%;">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>